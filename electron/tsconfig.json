{
    "compilerOptions": {
        "module": "ES2022",
        "moduleResolution": "bundler",
        "target": "ES2020",
        "outDir": "../dist-electron",
        "rootDir": "..",
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "declaration": true
    },
    "include": [
        "**/*.ts",
        "../backend/src/**/*.ts"
    ]
}